<Application x:Class="DesktopUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ColorsDictionary.xaml"/>
                <ResourceDictionary Source="Styles/ButtonsDictionary.xaml"/>
                <ResourceDictionary Source="Styles/TextBlocksDictionary.xaml"/>
                <ResourceDictionary Source="Styles/WindowsDictionary.xaml"/>
                <ResourceDictionary Source="Styles/LVItemContainerDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
